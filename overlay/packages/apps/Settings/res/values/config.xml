<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">

    <!-- Whether SELinux status should be shown or not. -->
    <bool name="config_show_selinux_status">true</bool>

    <!-- Smart Charging -->
     <bool name="config_smartChargingAvailable">true</bool>

    <!-- Whether to use the mask for the quicksettings icons-->
    <bool name="config_useMaskForQs">true</bool>

    <!-- Max visible notification icons -->
    <integer name="config_maxVisibleNotificationIcons">6</integer>
    <integer name="config_maxVisibleNotificationIconsWhenDark">7</integer>

    <!-- Enable face auth only when swiping security view -->
    <bool name="config_faceAuthOnlyOnSecurityView">false</bool>

    <!-- The CPU temperature sensor path, defaults to empty -->
    <string name="config_cpuTempSensor" translatable="false">/sys/class/thermal/thermal_zone4/temp</string>

    <!-- The CPU temperature divider, if needed -->
    <integer name="config_cpuTempDivider" translatable="false">100</integer>

     <!-- For Enabling Battery Heath -->
     <bool name="config_supportBatteryHealth">true</bool>

     <!-- Battery Health -->
     <string name="config_batDesCap">/sys/class/power_supply/bms/charge_full_design</string>
     <string name="config_batCurCap">/sys/class/power_supply/bms/charge_now_raw</string>
     <string name="config_batChargeCycle">/sys/class/power_supply/bms/cycle_count</string>
     
     <!-- For Ultra Power Saving -->
     <bool name="config_supportUltraPowerSaving">true</bool>
</resources>
